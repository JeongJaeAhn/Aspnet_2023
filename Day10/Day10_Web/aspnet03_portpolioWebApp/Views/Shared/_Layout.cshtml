<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>iPortfolio Bootstrap Template - Index</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/themes/iPortfolio/assets/img/favicon.png" rel="icon">
    <link href="~/themes/iPortfolio/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Bootstrap 5 CDN -->
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">*@

    <!-- WYSWYG 에디터 링크 -->
    <link rel="stylesheet" href="~/lib/trumbowyg/ui/trumbowyg.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/themes/iPortfolio/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/themes/iPortfolio/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/themes/iPortfolio/assets/css/style.css" rel="stylesheet">

    <!-- Toast 메시지창 js 라이브러리 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
</head>
<body>

    <!-- ======= Mobile nav toggle button ======= -->
    <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

    <!-- ======= Header ======= -->
    <header id="header">
        <div class="d-flex flex-column">

            <div class="profile">
                <img src="~/themes/iPortfolio/assets/img/profile-beagle.jpg" alt="" class="img-fluid rounded-circle">
                <h1 class="text-light"><a asp-controller="Home" asp-action="Index">Ahn Jeong Jae</a></h1>
                <div class="social-links mt-3 text-center">
@*                    <a asp-controller="Account" asp-action="Login" class="login"><i class="bi bi-person"></i></a>
                    <a asp-controller="Account" asp-action="Register" class="Register"><i class="bi bi-person-add"></i></a>
                    <a asp-controller="Board" asp-action="Index" class="Title"><i class="bi bi-megaphone"></i></a>*@
@*                    <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
                    <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>*@
                    @if (signInManager.IsSignedIn(User))
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="ListRoles"><i class="bi bi-person-gear"></i></a>
                            <a asp-controller="Portfolio" asp-action="Index"><i class="bx bx-book-content"></i></a>
                        }
                          <a asp-controller="Account" asp-action="Profile"
                       asp-route-userName="@userManager.GetUserName(User)"><i class="bi bi-person-square"></i></a>
                        <a asp-controller="Board" asp-action="Index" class="Title"><i class="bi bi-megaphone"></i></a>
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-link nanum-bold">@userManager.GetUserName(User)</button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="Register"><i class="bi bi-person-add"></i></a>
                        <a asp-controller="Account" asp-action="Login" class="login"><i class="bi bi-person"></i></a>
                        <a asp-controller="Board" asp-action="Index" class="Title"><i class="bi bi-megaphone"></i></a>
                    }
                </div>
            </div>

            <nav id="navbar" class="nav-menu navbar">
                <ul>
                    <li><a href="#hero" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>Home</span></a></li>
                    <li><a href="#about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>About</span></a></li>
                    <li><a href="#skills" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>Skills</span></a></li>
                    <li><a href="#portfolio" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>Portfolio</span></a></li>
                    @*<li><a href="#services" class="nav-link scrollto"><i class="bx bx-server"></i> <span>Services</span></a></li>*@
                    <li><a href="#contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>Contact</span></a></li>
                </ul>
            </nav><!-- .nav-menu -->
        </div>
    </header><!-- End Header -->

     <!-- ======= Hero Section ======= -->
    <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
    <div class="hero-container" data-aos="fade-in">
      <h1>Ahn Jeong Jae</h1>
      <p><span class="typed" data-typed-items="Portfolio"></span></p>
    </div>
  </section><!-- End Hero -->

    <div class="container">
          @RenderBody()
    </div>

    <footer id="footer">
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>iPortfolio</span></strong>
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
                <!-- You can delete the links only if you purchased the pro version. -->
                <!-- Licensing information: https://bootstrapmade.com/license/ -->
                <!-- Purchase the pro version with working PHP/AJAX contact form: https://bootstrapmade.com/iportfolio-bootstrap-portfolio-websites-template/ -->
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- End  Footer -->

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Vendor JS Files -->
    <script src="~/themes/iPortfolio/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/aos/aos.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/themes/iPortfolio/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/themes/iPortfolio/assets/js/main.js"></script>

    <!-- jQuery & Bootstrap CND LINKs -->
    <script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" 
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" 
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <!-- WYSWYG 에디터용 js & 한국어언어팩 js -->
    <script src="~/lib/trumbowyg/trumbowyg.min.js"></script>
    <script src="~/lib/trumbowyg/langs/ko.min.js"></script>
    <!-- trumbowyg를 site.js에서 부르기때문에 상위에 trumbowyg에 관련된 js가 먼저 나와야.. -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
